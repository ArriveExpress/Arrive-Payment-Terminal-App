<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text -->
    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:letterSpacing">-0.035</item>
    </style>

    <!-- Title -->
    <style name="Text.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Title.Big">
        <item name="android:textSize">104sp</item>

    </style>

    <style name="Text.Title.Normal">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="Text.Title.Small">
        <item name="android:textSize">30sp</item>
    </style>

    <!-- SubTitle -->
    <style name="Text.Subtitle">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Subtitle.Big">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Subtitle.Normal">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Subtitle.Small">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Subtitle.ExtraSmall">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Subtitle.TinyBold">
        <item name="fontFamily">@font/dm_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Subtitle.TinyNormal">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <!-- Body -->
    <style name="Text.Body">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Body.Big">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Body.Normal">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Body.Medium">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Body.Small">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Body.ExtraSmall">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Body.Tiny">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="Text.Default" parent="Text" />

    <style name="Text.Default.White">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Default.Black">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Default.Gray">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="Text.Default.Small">
        <item name="android:textSize">11sp</item>
        <item name="android:background">@drawable/background_rounded_textview</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="Text.Variant">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/background_rectangle_radius_19_selector</item>
        <item name="android:textColor">@color/text_color_switch_selector</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="Button" />

    <style name="Button.Arrow">
        <item name="android:background">@drawable/circle_primary</item>
        <item name="srcCompat">@drawable/ic_arrow_right</item>
        <item name="android:foreground">@drawable/selectable_button_circle</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Button.White">
        <item name="backgroundColor">@color/buttonWhite</item>
        <item name="elevation">0dp</item>
        <item name="textColor">@color/textBlack</item>
        <item name="cornerRadius">36dp</item>
        <item name="paddingHorizontal">30dp</item>
        <item name="progressColor">@color/primary</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
    </style>

    <style name="Button.Primary">
        <item name="backgroundColor">@color/primary</item>
        <item name="elevation">0dp</item>
        <item name="textColor">@color/textBlack</item>
        <item name="cornerRadius">36dp</item>
        <item name="paddingHorizontal">30dp</item>
        <item name="progressColor">@color/white</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Button.Simple">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="textColor">@color/textWhite</item>
        <item name="cornerRadius">36dp</item>
        <item name="paddingHorizontal">0dp</item>
        <item name="progressColor">@color/white</item>
        <item name="underline">true</item>
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Call to Action -->

    <!-- Caption -->

    <!-- Strikethrough -->

</resources>