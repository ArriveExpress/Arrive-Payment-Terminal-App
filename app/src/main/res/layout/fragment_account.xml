<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:contentDescription="null"
        android:scaleType="fitXY"
        android:src="@drawable/background_gradient_big" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <TextView
            android:id="@+id/title"
            style="@style/Text.Title.Small"
            android:layout_marginStart="@dimen/screen_horizontal_padding_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawablePadding="@dimen/padding_small"
            android:paddingTop="@dimen/screen_top_padding"
            app:drawableStartCompat="@drawable/ic_account"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/mainInfoContainer"
            app:layout_constraintEnd_toStartOf="@id/logout"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Hello Mendy" />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/selectable_button_circle"
            android:layout_marginEnd="@dimen/screen_horizontal_padding_normal"
            android:src="@drawable/ic_logout"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" />


        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/mainInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal_padding_normal"
            android:layout_marginVertical="@dimen/padding_tiny"
            android:layout_marginTop="@dimen/padding_small"
            android:background="@drawable/background_container"
            android:elevation="20dp"
            app:layout_constraintBottom_toTopOf="@id/refillContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingVertical="@dimen/padding_normal"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/miles"
                    style="@style/Text.Body.Big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="352" />

                <TextView
                    android:id="@+id/milesTitle"
                    style="@style/Text.Body.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="@string/account_arrive_miles" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/balance"
                    style="@style/Text.Body.Big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:maxLines="1"
                    tools:text="$52" />

                <TextView
                    android:id="@+id/balanceTitle"
                    style="@style/Text.Body.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/account_balance"
                    android:textColorHint="@color/white"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/refillContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal_padding_normal"
            android:background="@drawable/background_container"
            android:layout_marginVertical="@dimen/padding_tiny"
            android:clipToPadding="false"
            android:paddingTop="@dimen/padding_medium"
            app:layout_constraintBottom_toTopOf="@id/cardContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainInfoContainer">

            <TextView
                android:id="@+id/refillTitle"
                style="@style/Text.Subtitle.TinyBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_medium"
                android:drawablePadding="@dimen/padding_small"
                tools:text="@string/account_refill_account"
                app:drawableStartCompat="@drawable/ic_refill"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_medium"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/padding_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/refillTitle">

                <LinearLayout
                    android:id="@+id/variantContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/variant100"
                        style="@style/Text.Variant"
                        android:layout_width="@dimen/price_chip_width"
                        android:layout_height="@dimen/price_chip_height"
                        android:text="@string/price_100" />

                    <TextView
                        android:id="@+id/variant75"
                        style="@style/Text.Variant"
                        android:layout_width="@dimen/price_chip_width"
                        android:layout_height="@dimen/price_chip_height"
                        android:layout_marginStart="@dimen/padding_half_small"
                        android:text="@string/price_75" />

                    <TextView
                        android:id="@+id/variant50"
                        style="@style/Text.Variant"
                        android:layout_width="@dimen/price_chip_width"
                        android:layout_height="@dimen/price_chip_height"
                        android:layout_marginStart="@dimen/padding_half_small"
                        android:text="@string/price_50" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_half_small">

                        <View
                            android:id="@+id/variantOtherLabel"
                            style="@style/Text.Variant"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="top"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/variantOther"
                            style="@style/Text.Variant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@null"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLines="1"
                            android:minWidth="@dimen/price_chip_width"
                            android:paddingBottom="22dp"
                            tools:text="@string/account_price_other"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/refill"
                        style="@style/Button.Arrow"
                        android:layout_width="@dimen/price_chip_height"
                        android:layout_height="@dimen/price_chip_height"
                        android:layout_marginStart="@dimen/padding_half_small" />

                </LinearLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal_padding_normal"
            android:background="@drawable/background_container"
            android:layout_marginVertical="@dimen/padding_tiny"
            android:padding="@dimen/padding_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refillContainer">

            <TextView
                android:id="@+id/cardsTitle"
                style="@style/Text.Subtitle.TinyBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_small"
                tools:text="@string/account_arrive_wallet"
                app:drawableStartCompat="@drawable/ic_wallet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addNew"
                style="@style/Text.Subtitle.TinyNormal"
                android:fontFamily="@font/dm_sans_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/account_add_new"
                android:drawablePadding="@dimen/padding_tiny"
                app:drawableStartCompat="@drawable/ic_plus"
                app:layout_constraintBottom_toBottomOf="@id/cardsTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cardsTitle" />


            <LinearLayout
                android:id="@+id/card_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardsTitle"
                android:paddingVertical="10dp"
                tools:background="@drawable/background_item">

                <TextView
                    android:id="@+id/card"
                    style="@style/Text.Body.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_dots"
                    tools:text="1778" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/defaultLabel"
                    style="@style/Text.Default.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    tools:text="@string/item_card_default" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_triangle_down"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>