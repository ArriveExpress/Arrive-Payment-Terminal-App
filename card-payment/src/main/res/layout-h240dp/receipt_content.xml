        android:layout_marginTop="7.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AMOUNT:82.97"
        android:textColor="@color/black"
        android:textSize="21sp" />
    <TextView
        android:layout_marginTop="7.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="07/01/2024 14:37"
        android:textColor="@color/black"
        android:textSize="21sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_black_line2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:scaleX="0.9"
        android:text="KOZEN\nTO LEAD TO WORK WITH LEADER"
        android:textColor="@color/black"
        android:textSize="23sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:gravity="center"
        android:text="KOZEN, a tech brand specializing in electronic payments, is dedicated to delivering top-notch user experiences with smart POS solutions."
        android:textColor="@color/black"
        android:textSize="20.5sp" />
    <ImageView
        android:layout_width="210dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/web_qr"
        android:gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-7.5dp"
        android:text="www.kozenenterprise.com"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="THANK YOU FOR VISITING!"
        android:textColor="@color/black"
        android:textSize="24sp" />
</LinearLayout>